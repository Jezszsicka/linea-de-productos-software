<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="model.Message" table="messages">
		<id column="messageID" name="messageID" type="int">
			<generator class="native" />
		</id>
		
		<property name="sender" type="java.lang.String">
			<column name="sender" />
		</property>
		
		<property name="receiver" type="java.lang.String">
			<column name="receiver" />
		</property>
		
		<property name="subject" type="java.lang.String">
			<column name="subject" />
		</property>
		
		<property name="content" type="java.lang.String">
			<column name="content" />
		</property>
		
		<property name="type">
			<column name="type" />
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">ProductLine.MessageType</param>
				<param name="type">12</param>
			</type>

		</property>
		
		<property name="seen" type="boolean">
			<column name="seen" />
		</property>
		
		
		
	</class>
</hibernate-mapping>